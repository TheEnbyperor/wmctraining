<?xml version="1.0" encoding="utf-8"?>
<bundle name="WooRewards">
  <domain name="woorewards">
    <project name="WooRewards" slug="woorewards">
      <source>
        <directory>.</directory>
				<exclude>
					<directory>assets</directory>
					<directory>modules</directory>
				</exclude>
      </source>
      <target>
        <directory>languages</directory>
      </target>
      <template>
        <file>languages/woorewards.pot</file>
      </template>
    </project>
  </domain>
  <domain name="lws-adminpanel">
    <project name="LWS AdminPanel" slug="lws-adminpanel">
      <source>
        <directory>./assets/lws-adminpanel</directory>
      </source>
      <target>
        <directory>./assets/lws-adminpanel/languages</directory>
      </target>
      <template>
        <file>./assets/lws-adminpanel/languages/lws-adminpanel.pot</file>
      </template>
    </project>
  </domain>
  <domain name="woorewards-pro">
    <project name="WooRewards Pro" slug="woorewards-pro">
      <source>
        <directory>./modules/woorewards-pro</directory>
      </source>
      <target>
        <directory>./modules/woorewards-pro/languages</directory>
      </target>
      <template>
        <file>./modules/woorewards-pro/languages/woorewards-pro.pot</file>
      </template>
    </project>
  </domain>
  <exclude>
    <directory>./assets/tgm</directory>
  </exclude>
</bundle>
